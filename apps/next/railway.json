{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bun run build:next"
  },
  "deploy": {
    "startCommand": "bun run start:next",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 5
  }
}