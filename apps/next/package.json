{
  "name": "metal",
  "version": "0.1.0",
  "engines": {
    "node": "20"
  },
  "private": true,
  "scripts": {
    "build:next": "NEXT_TELEMETRY_DISABLED=1 next build",
    "build:oci": "NEXT_TELEMETRY_DISABLED=1 nixpacks build ./ --name metal-next --start-cmd 'bun run start:next'",
    "build:temporal": "tsc --build ./temporal/tsconfig.json",
    "build": "concurrently --raw \"npm:build:next\" \"npm:build:temporal\"",
    "db:push": "source $HOME/.nvm/nvm.sh; nvm use 20; drizzle-kit push:pg",
    "ci:db:push": "npm config set ca='' && drizzle-kit push:pg",
    "db:studio": "source $HOME/.nvm/nvm.sh; nvm use 20; drizzle-kit studio",
    "db:nuke": "bun run ./app/server/db/nuke.ts",
    "dev:next": "next dev --turbo",
    "dev:otel-collector": "cd hack/opentelemetry-collector-dev-setup && docker-compose up > /dev/null 2>&1",
    "dev:temporal": "cd temporal && tsx --env-file ../.env --watch --watch-preserve-output src/worker.ts",
    "dev": "concurrently --raw \"npm:dev:*\"",
    "lint": "next lint",
    "start:next": "NEXT_TELEMETRY_DISABLED=1 next start",
    "start:worker": "cd temporal && tsx ./src/worker.ts"
  },
  "dependencies": {
    "@clerk/nextjs": "^4.29.11",
    "@clerk/themes": "^1.7.12",
    "@epic-web/remember": "^1.0.2",
    "@headlessui/react": "^1.7.18",
    "@hono/zod-openapi": "^0.11.0",
    "@kubernetes/client-node": "^0.20.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/sdk-node": "^0.50.0",
    "@opentelemetry/sdk-trace-node": "^1.23.0",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@temporalio/activity": "^1.9.3",
    "@temporalio/client": "^1.9.3",
    "@temporalio/interceptors-opentelemetry": "^1.9.3",
    "@temporalio/worker": "^1.9.3",
    "@temporalio/workflow": "^1.9.3",
    "@vercel/otel": "^1.8.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.8",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.2.5",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.363.0",
    "next": "14.1.4",
    "next-themes": "^0.3.0",
    "openapi-fetch": "^0.9.3",
    "postgres": "^3.4.4",
    "react": "^18",
    "react-dom": "^18",
    "sharp": "^0.33.3",
    "sshpk": "^1.18.0",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7",
    "tmp": "^0.2.3",
    "uuid-base62": "^0.1.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/bun": "^1.1.0",
    "@types/node": "^20",
    "@types/opener": "^1.4.3",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/sshpk": "^1.17.4",
    "@types/tmp": "^0.2.6",
    "autoprefixer": "^10.0.1",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.17",
    "eslint": "^8",
    "eslint-config-next": "14.1.4",
    "openapi-typescript": "^6.7.5",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.4.5"
  }
}
