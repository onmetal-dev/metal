{
  "name": "metal",
  "version": "0.1.0",
  "engines": {
    "node": "20"
  },
  "private": true,
  "scripts": {
    "build:next": "next build",
    "build:oci": "nixpacks build ./ --name metal-next --start-cmd 'bun run start:next'",
    "build:temporal": "tsc --build ./temporal/tsconfig.json",
    "build": "concurrently --raw \"npm:build:next\" \"npm:build:temporal\"",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "dev:next": "next dev",
    "dev:otel-collector": "cd hack/opentelemetry-collector-dev-setup && docker-compose up",
    "dev:temporal": "tsx --env-file .env.development --watch --watch-preserve-output temporal/src/worker.ts",
    "dev": "concurrently --raw \"npm:dev:*\"",
    "lint": "next lint",
    "start:next": "next start",
    "start:worker": "tsx ./temporal/lib/worker"
  },
  "dependencies": {
    "@clerk/nextjs": "^4.29.11",
    "@clerk/themes": "^1.7.12",
    "@epic-web/remember": "^1.0.2",
